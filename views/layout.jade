extends html

block append head
	link(rel='stylesheet', href='/static/css/style.css')

block body
	nav#header.navbar.navbar-default
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#header-nav')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar

				a.navbar-brand(href='/')= siteName

			#header-nav.collapse.navbar-collapse
				- var headerNavClass = {}
				if headerNav
					- headerNavClass[headerNav] = 'active'

				ul.nav.navbar-nav
					li(class=headerNavClass['index'])
						a(href='/') Home
					li(class=headerNavClass['about'])
						a(href='/about') About
					li(class=headerNavClass['contact'])
						a(href='/contact') Contact
			
	block main

	footer#footer
		.container
			p #{siteName} &copy; 2015